<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_medium">



    <com.padc.goldenmyanmartour.components.DynamicImageView
        android:id="@+id/iv_hotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ygnhotel_1"
        android:layout_marginTop="@dimen/margin_small"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/tv_hotel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Park Royal Yangon"
        android:textSize="@dimen/text_heading_1x"
        android:textColor="@color/primary_text"/>

    <RatingBar
        android:id="@+id/rb_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="3.0"
        android:numStars="5"
        android:stepSize="0.5"
        android:layout_below="@+id/tv_hotel_name"/>

    <ImageButton
        android:id="@+id/ib_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rb_star"
        android:src="@drawable/home_1"
        android:layout_alignParentLeft="true"
        android:background="@color/icons"
        />

    <TextView
        android:id="@+id/tv_hotel_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="33 Alan Pya Phaya Road, Dagon Township, Yangon, Myanmar"
        android:textSize="@dimen/text_regular"
        android:textColor="@color/primary_text"
        android:layout_below="@+id/rb_star"
        android:layout_toRightOf="@id/ib_home"
        android:layout_marginLeft="@dimen/margin_small"
        />
    <ImageButton
        android:id="@+id/ib_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phone_1"
        android:layout_below="@+id/tv_hotel_address"
        android:background="@color/icons"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09-36069759"
        android:layout_toRightOf="@id/ib_phone"
        android:layout_below="@+id/tv_hotel_address"
        android:textSize="@dimen/text_regular"
        android:textColor="@color/primary_text"
        android:textAlignment="gravity"
        android:layout_marginLeft="@dimen/margin_small"
        />


</RelativeLayout>






</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_place_one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/image_left"
                android:layout_marginTop="@dimen/image_left"
                android:src="@drawable/ic_pin_drop_24dp" />

            <ImageView
                android:id="@+id/iv_place_two"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/image_left"
                android:layout_marginTop="@dimen/image_left"
                android:src="@drawable/ic_pin_drop_24dp" />

            <ImageView
                android:id="@+id/iv_place_three"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/image_left"
                android:layout_marginTop="@dimen/image_left"
                android:src="@drawable/ic_pin_drop_24dp" />

            <ImageView
                android:id="@+id/iv_place_four"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/image_left"
                android:layout_marginTop="@dimen/image_left"
                android:src="@drawable/ic_pin_drop_24dp" />

            <ImageView
                android:id="@+id/iv_place_five"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/image_left"
                android:layout_marginTop="@dimen/image_left"
                android:src="@drawable/ic_pin_drop_24dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Calculate" />

    <GridView
        android:id="@+id/gv_plan_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/image_left"
        android:gravity="center" />
</LinearLayout>